{
  "component": {
    "prefix": "rc",
    "body": [
      "import React, { Component } from 'react';",
      "",
      "// import { Container } from './styles';",
      "",
      "export default class ${1:${TM_DIRECTORY/^.+\\/(.*)$/$1/}} extends Component {",
      "  render() {",
      "    return <div />;",
      "  }",
      "}",
      ""
    ],
    "description": "Create react component"
  },

  "componentStateless": {
    "prefix": "rsc",
    "body": [
      "import React from 'react';",
      "",
      "// import { Container } from './styles';",
      "",
      "const ${1:${TM_DIRECTORY/^.+\\/(.*)$/$1/}} = () => <div />;",
      "",
      "export default ${1:${TM_DIRECTORY/^.+\\/(.*)$/$1/}};",
      ""
    ],
    "description": "Create react stateless component"
  },

  "styles": {
    "prefix": "styled",
    "body": [
      "import styled from 'styled-components';",
      "",
      "export const ${1:Container} = styled.${2:div}`",
      "  ${3}",
      "`;",
      ""
    ],
    "description": "Create react styled-components file"
  },

  "proptypes": {
    "prefix": "proptypes",
    "body": ["static propTypes = {", "  ${1}", "};"],
    "description": "Create component propTypes"
  },

  "defaultprops": {
    "prefix": "defaultprops",
    "body": ["static defaultProps = {", "  ${1}", "};"],
    "description": "Create component defaultProps"
  },

